<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heng.finance.mapper.DepositMapper">
    <!--保存对象-->
    <insert id="insert" parameterType="Deposit" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into t_finance_deposit(
                            name,
                            customer_id,
                            customer_name,
                            deposit,
                            pay_time,
                            product_id,
                            product_name,
                            business_id,
                            business_name,
                            state,
                            order_id,
                            order_sn
        ) values(
                                   #{name},
                                   #{customerId},
                                   #{customerName},
                                   #{deposit},
                                   #{payTime},
                                   #{productId},
                                   #{productName},
                                   #{businessId},
                                   #{businessName},
                                   #{state},
                                   #{orderId},
                                   #{orderSn}
        )
    </insert>
    <!--删除对象-->
    <delete id="remove" parameterType="long">
        delete from t_finance_deposit where id = #{id}
    </delete>

    <!--更新对象-->
    <update id="update" parameterType="Deposit">
        update t_finance_deposit
        set

                            name = #{name},
                            customer_id = #{customerId},
                            customer_name = #{customerName},
                            deposit = #{deposit},
                            pay_time = #{payTime},
                            product_id = #{productId},
                            product_name = #{productName},
                            business_id = #{businessId},
                            business_name = #{businessName},
                            state = #{state},
                            order_id = #{orderId},
                            order_sn = #{orderSn}
        where id = #{id}
    </update>
    <!--加载对象-->
    <select id="loadById" resultMap="BaseResultMap" parameterType="long">
        select * from t_finance_deposit where id = #{id}
    </select>
    <!--加载所有对象-->
    <select id="loadAll" resultMap="BaseResultMap">
        select * from t_finance_deposit
    </select>
    <!--//查询总数=参数（查询对象），返回值：long-->
    <select id="loadTotal" parameterType="DepositQuery" resultType="Long">
        select count(*) from t_finance_deposit
        <include refid="whereSql"/>
    </select>
    <!--//查询当前页数据=参数（查询对象），返回值:List-->
    <select id="pageList" parameterType="DepositQuery" resultMap="BaseResultMap">
        select * from t_finance_deposit
        <include refid="whereSql"/>
        limit #{start},#{pageSize}
    </select>


    <sql id="whereSql">
        <where>
            <if test="keyword!=null and keyword!=''">
                and (name like concat('%',#{keyword},'%'))
            </if>
        </where>
    </sql>

    <!--//批量删除-->
    <delete id="patchRemove" parameterType="arraylist">
        delete from t_finance_deposit where id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.heng.finance.domain.Deposit">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="customer_id" property="customerId" />
        <result column="customer_name" property="customerName" />
        <result column="deposit" property="deposit" />
        <result column="pay_time" property="payTime" />
        <result column="product_id" property="productId" />
        <result column="product_name" property="productName" />
        <result column="business_id" property="businessId" />
        <result column="business_name" property="businessName" />
        <result column="state" property="state" />
        <result column="order_id" property="orderId" />
        <result column="order_sn" property="orderSn" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, customer_id AS customerId, customer_name AS customerName, deposit, pay_time AS payTime, product_id AS productId, product_name AS productName, business_id AS businessId, business_name AS businessName, state, order_id AS orderId, order_sn AS orderSn
    </sql>

</mapper>
