<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heng.finance.mapper.ReceivablesItemMapper">
    <!--保存对象-->
    <insert id="insert" parameterType="ReceivablesItem" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into t_finance_receivables_item(
                            name,
                            contract_id,
                            customer_id,
                            customer_name,
                            product_id,
                            product_name,
                            price,
                            paymethod_id,
                            pay_time,
                            last_should_pay_time,
                            receivables_id,
                            state,
                            payee,
                            payee_name
        ) values(
                                   #{name},
                                   #{contractId},
                                   #{customerId},
                                   #{customerName},
                                   #{productId},
                                   #{productName},
                                   #{price},
                                   #{paymethodId},
                                   #{payTime},
                                   #{lastShouldPayTime},
                                   #{receivablesId},
                                   #{state},
                                   #{payee},
                                   #{payeeName}
        )
    </insert>
    <!--删除对象-->
    <delete id="remove" parameterType="long">
        delete from t_finance_receivables_item where id = #{id}
    </delete>

    <!--更新对象-->
    <update id="update" parameterType="ReceivablesItem">
        update t_finance_receivables_item
        set

                            name = #{name},
                            contract_id = #{contractId},
                            customer_id = #{customerId},
                            customer_name = #{customerName},
                            product_id = #{productId},
                            product_name = #{productName},
                            price = #{price},
                            paymethod_id = #{paymethodId},
                            pay_time = #{payTime},
                            last_should_pay_time = #{lastShouldPayTime},
                            receivables_id = #{receivablesId},
                            state = #{state},
                            payee = #{payee},
                            payee_name = #{payeeName}
        where id = #{id}
    </update>
    <!--加载对象-->
    <select id="loadById" resultMap="BaseResultMap" parameterType="long">
        select * from t_finance_receivables_item where id = #{id}
    </select>
    <!--加载所有对象-->
    <select id="loadAll" resultMap="BaseResultMap">
        select * from t_finance_receivables_item
    </select>
    <!--//查询总数=参数（查询对象），返回值：long-->
    <select id="loadTotal" parameterType="ReceivablesItemQuery" resultType="Long">
        select count(*) from t_finance_receivables_item
        <include refid="whereSql"/>
    </select>
    <!--//查询当前页数据=参数（查询对象），返回值:List-->
    <select id="pageList" parameterType="ReceivablesItemQuery" resultMap="BaseResultMap">
        select * from t_finance_receivables_item
        <include refid="whereSql"/>
        limit #{start},#{pageSize}
    </select>


    <sql id="whereSql">
        <where>
            <if test="keyword!=null and keyword!=''">
                and (name like concat('%',#{keyword},'%'))
            </if>
        </where>
    </sql>

    <!--//批量删除-->
    <delete id="patchRemove" parameterType="arraylist">
        delete from t_finance_receivables_item where id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.heng.finance.domain.ReceivablesItem">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="contract_id" property="contractId" />
        <result column="customer_id" property="customerId" />
        <result column="customer_name" property="customerName" />
        <result column="product_id" property="productId" />
        <result column="product_name" property="productName" />
        <result column="price" property="price" />
        <result column="paymethod_id" property="paymethodId" />
        <result column="pay_time" property="payTime" />
        <result column="last_should_pay_time" property="lastShouldPayTime" />
        <result column="receivables_id" property="receivablesId" />
        <result column="state" property="state" />
        <result column="payee" property="payee" />
        <result column="payee_name" property="payeeName" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, contract_id AS contractId, customer_id AS customerId, customer_name AS customerName, product_id AS productId, product_name AS productName, price, paymethod_id AS paymethodId, pay_time AS payTime, last_should_pay_time AS lastShouldPayTime, receivables_id AS receivablesId, state, payee, payee_name AS payeeName
    </sql>

</mapper>
