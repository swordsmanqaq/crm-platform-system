<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heng.car.mapper.CarResourcesMapper">
    <!--保存对象-->
    <insert id="insert" parameterType="CarResources" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into t_car_car_resources(
                            viceimg,
                            img,
                            moreimg,
                            car_id
        ) values(
                                   #{viceimg},
                                   #{img},
                                   #{moreimg},
                                   #{carId}
        )
    </insert>
    <!--删除对象-->
    <delete id="remove" parameterType="long">
        delete from t_car_car_resources where id = #{id}
    </delete>

    <!--更新对象-->
    <update id="update" parameterType="CarResources">
        update t_car_car_resources
        set
            viceimg = #{viceimg},
            img = #{img},
            moreimg = #{moreimg},
            car_id = #{carId}
        where id = #{id}
    </update>

    <update id="updateByCarId" parameterType="CarResources">
        update t_car_car_resources
        set
            viceimg = #{viceimg},
            img = #{img},
            moreimg = #{moreimg}
        where car_id = #{carId}
    </update>

    <!--加载对象-->
    <select id="loadById" resultMap="BaseResultMap" parameterType="long">
        select * from t_car_car_resources where id = #{id}
    </select>
    <!--加载所有对象-->
    <select id="loadAll" resultMap="BaseResultMap">
        select * from t_car_car_resources
    </select>
    <!--//查询总数=参数（查询对象），返回值：long-->
    <select id="loadTotal" parameterType="CarResourcesQuery" resultType="Long">
        select count(*) from t_car_car_resources
        <include refid="whereSql"/>
    </select>
    <!--//查询当前页数据=参数（查询对象），返回值:List-->
    <select id="pageList" parameterType="CarResourcesQuery" resultMap="BaseResultMap">
        select * from t_car_car_resources
        <include refid="whereSql"/>
        limit #{start},#{pageSize}
    </select>

    <select id="loadByCarId" resultMap="BaseResultMap">
        select * from t_car_car_resources
        where car_id = #{carId}
    </select>


    <sql id="whereSql">
        <where>
            <if test="keyword!=null and keyword!=''">
                and (name like concat('%',#{keyword},'%'))
            </if>
        </where>
    </sql>

    <!--//批量删除-->
    <delete id="patchRemove" parameterType="arraylist">
        delete from t_car_car_resources where id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.heng.car.domain.CarResources">
        <id column="id" property="id" />
        <result column="viceimg" property="viceimg" />
        <result column="img" property="img" />
        <result column="moreimg" property="moreimg" />
        <result column="car_id" property="carId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, viceimg, img, moreimg, car_id AS carId
    </sql>

</mapper>
