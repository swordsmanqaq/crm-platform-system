<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heng.car.mapper.CarDetailMapper">
    <!--保存对象-->
    <insert id="insert" parameterType="CarDetail" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into t_car_car_detail(
                            info,
                            car_id,
                            cartitle,
                            detectiontime,
                            detector_id,
                            detectorname,
                            accident_investigation,
                            core_components_investigation,
                            Common_functions_investigation,
                            appearance_inspection
        ) values(
                                   #{info},
                                   #{carId},
                                   #{cartitle},
                                   #{detectiontime},
                                   #{detectorId},
                                   #{detectorname},
                                   #{accidentInvestigation},
                                   #{coreComponentsInvestigation},
                                   #{commonFunctionsInvestigation},
                                   #{appearanceInspection}
        )
    </insert>
    <!--删除对象-->
    <delete id="remove" parameterType="long">
        delete from t_car_car_detail where id = #{id}
    </delete>

    <!--更新对象-->
    <update id="update" parameterType="CarDetail">
        update t_car_car_detail
        set

                            info = #{info},
                            car_id = #{carId},
                            cartitle = #{cartitle},
                            detectiontime = #{detectiontime},
                            detector_id = #{detectorId},
                            detectorname = #{detectorname},
                            accident_investigation = #{accidentInvestigation},
                            core_components_investigation = #{coreComponentsInvestigation},
                            Common_functions_investigation = #{commonFunctionsInvestigation},
                            appearance_inspection = #{appearanceInspection}
        where id = #{id}
    </update>
    <!--加载对象-->
    <select id="loadById" resultMap="BaseResultMap" parameterType="long">
        select * from t_car_car_detail where id = #{id}
    </select>
    <!--加载所有对象-->
    <select id="loadAll" resultMap="BaseResultMap">
        select * from t_car_car_detail
    </select>
    <!--//查询总数=参数（查询对象），返回值：long-->
    <select id="loadTotal" parameterType="CarDetailQuery" resultType="Long">
        select count(*) from t_car_car_detail
        <include refid="whereSql"/>
    </select>
    <!--//查询当前页数据=参数（查询对象），返回值:List-->
    <select id="pageList" parameterType="CarDetailQuery" resultMap="BaseResultMap">
        select * from t_car_car_detail
        <include refid="whereSql"/>
        limit #{start},#{pageSize}
    </select>


    <sql id="whereSql">
        <where>
            <if test="keyword!=null and keyword!=''">
                and (name like concat('%',#{keyword},'%'))
            </if>
        </where>
    </sql>

    <!--//批量删除-->
    <delete id="patchRemove" parameterType="arraylist">
        delete from t_car_car_detail where id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.heng.car.domain.CarDetail">
        <id column="id" property="id" />
        <result column="info" property="info" />
        <result column="car_id" property="carId" />
        <result column="cartitle" property="cartitle" />
        <result column="detectiontime" property="detectiontime" />
        <result column="detector_id" property="detectorId" />
        <result column="detectorname" property="detectorname" />
        <result column="accident_investigation" property="accidentInvestigation" />
        <result column="core_components_investigation" property="coreComponentsInvestigation" />
        <result column="Common_functions_investigation" property="commonFunctionsInvestigation" />
        <result column="appearance_inspection" property="appearanceInspection" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, info, car_id AS carId, cartitle, detectiontime, detector_id AS detectorId, detectorname, accident_investigation AS accidentInvestigation, core_components_investigation AS coreComponentsInvestigation, Common_functions_investigation AS commonFunctionsInvestigation, appearance_inspection AS appearanceInspection
    </sql>

</mapper>
