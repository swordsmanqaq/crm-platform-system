<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heng.prod.mapper.ProductTypeMapper">
    <!--保存对象-->
    <insert id="insert" parameterType="ProductType" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into t_prod_product_type(
                            name,
                            description,
                            parent_id
        ) values(
                                   #{name},
                                   #{description},
                                   #{parent.id}
        )
    </insert>
    <!--删除对象-->
    <delete id="remove" parameterType="long">
        delete from t_prod_product_type where id = #{id}
    </delete>

    <!--更新对象-->
    <update id="update" parameterType="ProductType">
        update t_prod_product_type
        set

                            name = #{name},
                            description = #{description},
                            parent_id = #{parent.id}
        where id = #{id}
    </update>
    <!--加载对象-->
    <select id="loadById" resultMap="BaseResultMap" parameterType="long">
        select * from t_prod_product_type where id = #{id}
    </select>
    <!--加载所有对象-->
    <select id="loadAll" resultMap="BaseResultMap">
        select * from t_prod_product_type
    </select>
    <!--//查询总数=参数（查询对象），返回值：long-->
    <select id="loadTotal" parameterType="ProductTypeQuery" resultType="Long">
        select count(*)
        FROM t_prod_product_type c LEFT JOIN t_prod_product_type p
        on c.parent_id = p.id
        <include refid="whereSql"/>
    </select>
    <!--//查询当前页数据=参数（查询对象），返回值:List-->
    <select id="pageList" parameterType="ProductTypeQuery" resultMap="BaseResultMap">
        SELECT c.*, p.id as `pid`, p.name as `pname`
        FROM t_prod_product_type c LEFT JOIN t_prod_product_type p
        on c.parent_id = p.id
        <include refid="whereSql"/>
        limit #{start},#{pageSize}
    </select>

    <select id="getFirstProductType" resultType="com.heng.prod.domain.ProductType">
        select *
        from t_prod_product_type
        where parent_id is null;
    </select>

    <select id="getProdTree" resultMap="BaseResultMap">
        SELECT p.*, t.id as `tid`, t.`name` as `tname`
        FROM t_prod_product_type p LEFT JOIN t_prod_product_type t
        ON p.id = t.parent_id
        WHERE p.parent_id is NULL
    </select>


    <sql id="whereSql">
        <where>
            <if test="keyword!=null and keyword!=''">
                and (c.name like concat('%',#{keyword},'%'))
            </if>
        </where>
    </sql>

    <!--//批量删除-->
    <delete id="patchRemove" parameterType="arraylist">
        delete from t_prod_product_type where id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.heng.prod.domain.ProductType">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <association property="parent" javaType="productType">
            <id column="pid" property="id"></id>
            <result column="pname" property="name"></result>
        </association>
        <collection property="children" ofType="productType">
            <id column="tid" property="id"></id>
            <result column="tname" property="name"></result>
        </collection>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, description, parent_id AS parentId
    </sql>

</mapper>
