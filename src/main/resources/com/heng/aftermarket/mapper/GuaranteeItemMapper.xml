<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heng.aftermarket.mapper.GuaranteeItemMapper">
    <!--保存对象-->
    <insert id="insert" parameterType="GuaranteeItem" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into t_aftermarket_guarantee_item(
                            product_id,
                            product_name,
                            order_id,
                            order_sn,
                            customer_name,
                            customer_id,
                            guarantee_id,
                            isPay,
                            paymoney
        ) values(
                                   #{productId},
                                   #{productName},
                                   #{orderId},
                                   #{orderSn},
                                   #{customerName},
                                   #{customerId},
                                   #{guaranteeId},
                                   #{isPay},
                                   #{paymoney}
        )
    </insert>
    <!--删除对象-->
    <delete id="remove" parameterType="long">
        delete from t_aftermarket_guarantee_item where id = #{id}
    </delete>

    <!--更新对象-->
    <update id="update" parameterType="GuaranteeItem">
        update t_aftermarket_guarantee_item
        set

                            product_id = #{productId},
                            product_name = #{productName},
                            order_id = #{orderId},
                            order_sn = #{orderSn},
                            customer_name = #{customerName},
                            customer_id = #{customerId},
                            guarantee_id = #{guaranteeId},
                            isPay = #{isPay},
                            paymoney = #{paymoney}
        where id = #{id}
    </update>
    <!--加载对象-->
    <select id="loadById" resultMap="BaseResultMap" parameterType="long">
        select * from t_aftermarket_guarantee_item where id = #{id}
    </select>
    <!--加载所有对象-->
    <select id="loadAll" resultMap="BaseResultMap">
        select * from t_aftermarket_guarantee_item
    </select>
    <!--//查询总数=参数（查询对象），返回值：long-->
    <select id="loadTotal" parameterType="GuaranteeItemQuery" resultType="Long">
        select count(*) from t_aftermarket_guarantee_item
        <include refid="whereSql"/>
    </select>
    <!--//查询当前页数据=参数（查询对象），返回值:List-->
    <select id="pageList" parameterType="GuaranteeItemQuery" resultMap="BaseResultMap">
        select * from t_aftermarket_guarantee_item
        <include refid="whereSql"/>
        limit #{start},#{pageSize}
    </select>


    <sql id="whereSql">
        <where>
            <if test="keyword!=null and keyword!=''">
                and (name like concat('%',#{keyword},'%'))
            </if>
        </where>
    </sql>

    <!--//批量删除-->
    <delete id="patchRemove" parameterType="arraylist">
        delete from t_aftermarket_guarantee_item where id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.heng.aftermarket.domain.GuaranteeItem">
        <id column="id" property="id" />
        <result column="product_id" property="productId" />
        <result column="product_name" property="productName" />
        <result column="order_id" property="orderId" />
        <result column="order_sn" property="orderSn" />
        <result column="customer_name" property="customerName" />
        <result column="customer_id" property="customerId" />
        <result column="guarantee_id" property="guaranteeId" />
        <result column="isPay" property="isPay" />
        <result column="paymoney" property="paymoney" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, product_id AS productId, product_name AS productName, order_id AS orderId, order_sn AS orderSn, customer_name AS customerName, customer_id AS customerId, guarantee_id AS guaranteeId, isPay, paymoney
    </sql>

</mapper>
