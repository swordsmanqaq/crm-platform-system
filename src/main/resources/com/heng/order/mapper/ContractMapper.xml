<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heng.order.mapper.ContractMapper">
    <!--保存对象-->
    <insert id="insert" parameterType="Contract" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into t_order_contract(
                            sn,
                            order_id,
                            order_sn,
                            customer_id,
                            customer_name,
                            price,
                            deposit,
                            content,
                            description,
                            create_time,
                            update_time,
                            state
        ) values(
                                   #{sn},
                                   #{orderId},
                                   #{orderSn},
                                   #{customerId},
                                   #{customerName},
                                   #{price},
                                   #{deposit},
                                   #{content},
                                   #{description},
                                   #{createTime},
                                   #{updateTime},
                                   #{state}
        )
    </insert>
    <!--删除对象-->
    <delete id="remove" parameterType="long">
        delete from t_order_contract where id = #{id}
    </delete>

    <!--更新对象-->
    <update id="update" parameterType="Contract">
        update t_order_contract
        set

                            sn = #{sn},
                            order_id = #{orderId},
                            order_sn = #{orderSn},
                            customer_id = #{customerId},
                            customer_name = #{customerName},
                            price = #{price},
                            deposit = #{deposit},
                            content = #{content},
                            description = #{description},
                            create_time = #{createTime},
                            update_time = #{updateTime},
                            state = #{state}
        where id = #{id}
    </update>
    <!--加载对象-->
    <select id="loadById" resultMap="BaseResultMap" parameterType="long">
        select * from t_order_contract where id = #{id}
    </select>
    <!--加载所有对象-->
    <select id="loadAll" resultMap="BaseResultMap">
        select * from t_order_contract
    </select>
    <!--//查询总数=参数（查询对象），返回值：long-->
    <select id="loadTotal" parameterType="ContractQuery" resultType="Long">
        select count(*) from t_order_contract
        <include refid="whereSql"/>
    </select>
    <!--//查询当前页数据=参数（查询对象），返回值:List-->
    <select id="pageList" parameterType="ContractQuery" resultMap="BaseResultMap">
        select * from t_order_contract
        <include refid="whereSql"/>
        limit #{start},#{pageSize}
    </select>

    <select id="loadByOrderId" resultType="com.heng.order.domain.Contract">
        select * from t_order_contract where order_id = #{id}
    </select>


    <sql id="whereSql">
        <where>
            <if test="keyword!=null and keyword!=''">
                and (name like concat('%',#{keyword},'%'))
            </if>
        </where>
    </sql>

    <!--//批量删除-->
    <delete id="patchRemove" parameterType="arraylist">
        delete from t_order_contract where id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.heng.order.domain.Contract">
        <id column="id" property="id" />
        <result column="sn" property="sn" />
        <result column="order_id" property="orderId" />
        <result column="order_sn" property="orderSn" />
        <result column="customer_id" property="customerId" />
        <result column="customer_name" property="customerName" />
        <result column="price" property="price" />
        <result column="deposit" property="deposit" />
        <result column="content" property="content" />
        <result column="description" property="description" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="state" property="state" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, sn, order_id AS orderId, order_sn AS orderSn, customer_id AS customerId, customer_name AS customerName, price, deposit, content, description, create_time AS createTime, update_time AS updateTime, state
    </sql>

</mapper>
