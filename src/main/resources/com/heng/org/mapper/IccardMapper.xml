<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heng.org.mapper.IccardMapper">
    <!--保存对象-->
    <insert id="insert" parameterType="Iccard" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into t_org_iccard(
                            uid,
                            user_id,
                            type,
                            state
        ) values(
                                   #{uid},
                                   #{userId},
                                   #{type},
                                   #{state}
        )
    </insert>
    <!--删除对象-->
    <delete id="remove" parameterType="long">
        delete from t_org_iccard where id = #{id}
    </delete>

    <!--更新对象-->
    <update id="update" parameterType="Iccard">
        update t_org_iccard
        set

                            uid = #{uid},
                            user_id = #{userId},
                            type = #{type},
                            state = #{state}
        where id = #{id}
    </update>

    <!--加载对象-->
    <select id="loadById" resultMap="BaseResultMap" parameterType="long">
        select * from t_org_iccard where id = #{id}
    </select>
    <!--加载所有对象-->
    <select id="loadAll" resultMap="BaseResultMap">
        select * from t_org_iccard
    </select>
    <!--//查询总数=参数（查询对象），返回值：long-->
    <select id="loadTotal" parameterType="IccardQuery" resultType="Long">
        select count(*) FROM t_org_iccard i
        LEFT JOIN t_org_household h ON i.user_id = h.id
        <include refid="whereSql"/>
    </select>
    <!--//查询当前页数据=参数（查询对象），返回值:List-->
    <select id="pageList" parameterType="IccardQuery" resultMap="BaseResultMap">
        SELECT i.*, h.id as "hid", h.username as "husername"
        FROM t_org_iccard i
        LEFT JOIN t_org_household h ON i.user_id = h.id
        <include refid="whereSql"/>
        limit #{start},#{pageSize}
    </select>

    <select id="loadByUserId" resultType="com.heng.org.domain.Iccard">
        select * from t_org_iccard where user_id = #{userId}
    </select>


    <sql id="whereSql">
        <where>
            <if test="keyword!=null and keyword!=''">
                and (i.uid like concat('%',#{keyword},'%'))
            </if>
        </where>
    </sql>

    <!--//批量删除-->
    <delete id="patchRemove" parameterType="arraylist">
        delete from t_org_iccard where id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.heng.org.domain.Iccard">
        <id column="id" property="id" />
        <result column="uid" property="uid" />
        <result column="user_id" property="userId"/>
        <result column="type" property="type" />
        <result column="state" property="state" />
        <association property="household" javaType="household">
            <id column="hid" property="id"></id>
            <result column="husername" property="username"></result>
        </association>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, uid, user_id AS userId, type, state
    </sql>

</mapper>
