<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heng.org.mapper.HouseholdMapper">
    <!--保存对象-->
    <insert id="insert" parameterType="Household" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into t_org_household(
                            username,
                            password,
                            age,
                            check_time,
                            leave_time,
                            build,
        ) values(
                                   #{username},
                                   #{password},
                                   #{age},
                                   #{checkTime},
                                   #{leaveTime},
                                   #{build}
        )
    </insert>

    <insert id="saveRole">
        insert into t_auth_household_role(employee_id,role_id)
        values
        <foreach collection="roleId" item="roleId" separator=",">
            (#{householdId},#{roleId})
        </foreach>
    </insert>

    <!--删除对象-->
    <delete id="remove" parameterType="long">
        delete from t_org_household where id = #{id}
    </delete>

    <!--更新对象-->
    <update id="update" parameterType="Household">
        update t_org_household
        set

                            username = #{username},
                            password = #{password},
                            age = #{age},
                            check_time = #{checkTime},
                            leave_time = #{leaveTime},
                            build = #{build}
        where id = #{id}
    </update>
    <!--加载对象-->
    <select id="loadById" resultMap="BaseResultMap" parameterType="long">
        select * from t_org_household where id = #{id}
    </select>
    <!--加载所有对象-->
    <select id="loadAll" resultMap="BaseResultMap">
        select * from t_org_household
    </select>
    <!--//查询总数=参数（查询对象），返回值：long-->
    <select id="loadTotal" parameterType="HouseholdQuery" resultType="Long">
        select count(*) from t_org_household
        <include refid="whereSql"/>
    </select>
    <!--//查询当前页数据=参数（查询对象），返回值:List-->
    <select id="pageList" parameterType="HouseholdQuery" resultMap="BaseResultMap">
        select * from t_org_household
        <include refid="whereSql"/>
        limit #{start},#{pageSize}
    </select>

    <select id="loadByUsername" resultType="com.heng.org.domain.Household">
        select *
        from t_org_household
        where username = #{username};
    </select>

    <select id="getRoleByHouseholdId" resultType="java.lang.Long">
        select role_id from t_auth_household_role where employee_id = #{householdId}
    </select>


    <sql id="whereSql">
        <where>
            <if test="keyword!=null and keyword!=''">
                and (username like concat('%',#{keyword},'%'))
            </if>
        </where>
    </sql>

    <!--//批量删除-->
    <delete id="patchRemove" parameterType="arraylist">
        delete from t_org_household where id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <delete id="removeRole">
        delete from t_auth_household_role where employee_id = #{householdId}
    </delete>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.heng.org.domain.Household">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="age" property="age" />
        <result column="check_time" property="checkTime" />
        <result column="leave_time" property="leaveTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, username, password, age, check_time AS checkTime, leave_time AS leaveTime
    </sql>

</mapper>
