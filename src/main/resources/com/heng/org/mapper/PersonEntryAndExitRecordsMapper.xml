<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heng.org.mapper.PersonEntryAndExitRecordsMapper">
    <!--保存对象-->
    <insert id="insert" parameterType="PersonEntryAndExitRecords" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into t_org_personEntryAndExitRecords(
                            `name`,
                            entry_time,
                            info,
                            leave_time,
        ) values(
                                   #{name},
                                   #{entryTime},
                                   #{info},
                                   #{leaveTime}
        )
    </insert>
    <!--删除对象-->
    <delete id="remove" parameterType="long">
        delete from t_org_personEntryAndExitRecords where id = #{id}
    </delete>

    <!--更新对象-->
    <update id="update" parameterType="PersonEntryAndExitRecords">
        update t_org_personEntryAndExitRecords
        set

                            `name` = #{name},
                            entry_time = #{entryTime},
                            info = #{info},
                            leave_time = #{leaveTime}
        where id = #{id}
    </update>
    <!--加载对象-->
    <select id="loadById" resultMap="BaseResultMap" parameterType="long">
        select * from t_org_personEntryAndExitRecords where id = #{id}
    </select>
    <!--加载所有对象-->
    <select id="loadAll" resultMap="BaseResultMap">
        select * from t_org_personEntryAndExitRecords
    </select>
    <!--//查询总数=参数（查询对象），返回值：long-->
    <select id="loadTotal" parameterType="PersonEntryAndExitRecordsQuery" resultType="Long">
        select count(*) from t_org_personEntryAndExitRecords
        <include refid="whereSql"/>
    </select>
    <!--//查询当前页数据=参数（查询对象），返回值:List-->
    <select id="pageList" parameterType="PersonEntryAndExitRecordsQuery" resultMap="BaseResultMap">
        select * from t_org_personEntryAndExitRecords
        <include refid="whereSql"/>
        limit #{start},#{pageSize}
    </select>


    <sql id="whereSql">
        <where>
            <if test="keyword!=null and keyword!=''">
                and (name like concat('%',#{keyword},'%'))
            </if>
        </where>
    </sql>

    <!--//批量删除-->
    <delete id="patchRemove" parameterType="arraylist">
        delete from t_org_personEntryAndExitRecords where id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.heng.org.domain.PersonEntryAndExitRecords">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="entry_time" property="entryTime" />
        <result column="info" property="info" />
        <result column="leave_time" property="leaveTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, entry_time AS entryTime, info, leave_time AS leaveTime
    </sql>

</mapper>
